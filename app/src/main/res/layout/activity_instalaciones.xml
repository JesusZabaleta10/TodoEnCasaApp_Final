<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".InstalacionesActivity">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/gainsboro"
            android:orientation="horizontal">

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:id="@+id/marcador"
                android:layout_marginLeft="5dp"
                android:src="@drawable/back"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:textAllCaps="true"
                android:textSize="20sp"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginLeft="100dp"
                android:text="@string/instalaciones"/>
    </LinearLayout>

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">

        <androidx.cardview.widget.CardView
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:id="@+id/card_tecnico"
                android:layout_weight="1"
                android:layout_margin="1dp">
            <LinearLayout
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:orientation="vertical">
                <ImageView
                        android:layout_width="180dp"
                        android:layout_height="119dp"
                        android:src="@drawable/duvan"/>
                <ImageView
                        android:layout_width="180dp"
                        android:layout_height="30dp"
                        android:src="@drawable/estrellas_vacias"/>
                <TextView
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:text="@string/electricista"
                        android:layout_marginTop="5dp"
                        android:textSize="15sp"/>
                <TextView
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:text="@string/tecnico"
                        android:textSize="10sp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

